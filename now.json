{
  "redirects": [
    { "source": "/talks-slides/", "destination": "/speaking/" },
    { "source": "/details/", "destination": "/speaking/details/" },
    { "source": "/feed/", "destination": "/feed.xml" },
    { "source": "/atom.xml", "destination": "/feed.xml" },
    { "source": "/watching-list/", "destination": "/cinema/" },
    { "source": "/reading-list/", "destination": "/books/" },
    { "source": "/.well-known/brave-payment-verification.txt", "destination": "/brave-payment-verification.txt" }
  ],
  "headers": [
    { "source": "/(.*)", "headers" : [
        { "key" : "X-Content-Type-Options", "value" : "nosniff" },
        { "key" : "X-Frame-Options", "value" : "DENY" },
        { "key" : "X-XSS-Protection", "value" : "1; mode=block"}
      ]
    }
  ],
  "trailingSlash": true
}
