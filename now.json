{
  "redirects": [
    { "source": "/talks-slides/", "destination": "/speaking/" },
    { "source": "/details/", "destination": "/speaking/details/" },
    { "source": "/feed/", "destination": "/feed.xml" },
    { "source": "/atom.xml", "destination": "/feed.xml" }
  ],
  "headers": [
    { "source": "/(.*)", "headers" : [
        { "key" : "X-Content-Type-Options", "value" : "nosniff" },
        { "key" : "X-Frame-Options", "value" : "DENY" },
        { "key" : "X-XSS-Protection", "value" : "1; mode=block"}
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "/404.html" }
  ]
}
